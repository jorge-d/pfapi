<% if @users.count %>
<h3>Users are:</h3>
<table>
  <tr>
    <td>salt</td>
    <td>name</td>
    <td>email</td>
    <td>password</td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.salt %></td>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'e', edit_user_path(user) %></td>
    <td><%= link_to 'x', user, confirm: 'are you sure?', method: :delete %></td>
  </tr>
  <% end %>
</table>
<% else %>
<h3>No user in database</h3>
<% end %>

<% if @zones.count %>
<h3>Zones : </h3>
<table>
  <tr>
    <td>id</td>
    <td>latitude</td>
    <td>longitude</td>
  </tr>
  <% @zones.each do |z| %>
  <tr>
    <td><%= z.id %></td>
    <td><%= z.latitude %></td>
    <td><%= z.longitude %></td>
  </tr>
  <% end %>
</table>
<% end %>

<h3>Player is in <%= @lat %>, <%= @long %></h3>
