<% if @users.count %>
<h3>Users are:</h3>
<table>
  <tr>
    <td>name</td>
    <td>email</td>
    <td>password</td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td><%= link_to 'edit', edit_user_path(user) %></td>
    <td><%= link_to 'delete', user, confirm: 'are you sure?', method: :delete %></td>
  </tr>
  <% end %>
</table>
<% else %>
<h3>No user in database</h3>
<% end %>

<h3><%= link_to 'add a new user', new_user_path %><h3>
