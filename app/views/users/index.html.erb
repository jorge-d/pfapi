<% if @users.count %>
<h3>Users are:</h3>
<table>
  <tr>
    <td>name</td>
    <td>email</td>
    <td>password</td>
  </tr>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
  </tr>
  <% end %>
</table>
<% else %>
<h3>No user in database</h3>
<% end %>

<h3><%= link_to 'add a new user', new_user_path %><h3>
