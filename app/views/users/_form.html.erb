<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for @user do |u| %>
<table>
  <tr>
  <td><%= u.label :name %></td>
  <td><%= u.text_field :name %></td>
  </tr>

  <tr>
  <td><%= u.label :password %></td>
  <td><%= u.password_field :password %></td>
  </tr>

  <tr>
  <td><%= u.label :email %></td>
  <td><%= u.email_field :email %></td>
  </tr>

  <tr>
  <td><%= u.submit %></td>
  </tr>
</table>
<% end %>
